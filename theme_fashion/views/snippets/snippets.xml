<?xml version="1.0" encoding="UTF-8" ?>
<odoo>


    <template id="trusted_brands_snippet_registration" inherit_id="website.snippets" name="Trusted Brands Static Snippet">
        <xpath expr="//snippets[@id='snippet_groups']" position="inside">
            <t t-snippet="theme_fashion.trusted_brands_template"/>
        </xpath>
    </template>

    <template id="latest_products_snippet" name="Latest Products Carousel Dynamic">
        <section class="latest-products-carousel">
            <div class="container">
                <div class="text-center py-5">
                    <h2 class="h1">Latest Products</h2>
                    <p>Check out our newest products</p>
                </div>
                <div class="row justify-content-center" id="latest-products-row"></div>
            </div>
        </section>
    </template>

    <template id="categories_snippet" name="Categories Snippet Dynamic">
        <section class="categories-snippet">
            <div class="container">
                <div class="text-center py-5">
                    <h2 class="h1">Categories</h2>
                    <p>Browse our product categories</p>
                </div>
                <div class="row justify-content-center" id="categories-row"></div>
            </div>
        </section>
    </template>

    <template id="register_custom_snippets" inherit_id="website.snippets" name="Register Fashion Custom Snippets">
        <xpath expr="//snippets[@id='snippet_groups']" position="inside">
            <t t-snippet="theme_fashion.feature_fashion"/>
            <t t-snippet="theme_fashion.latest_products_snippet"/>
            <t t-snippet="theme_fashion.categories_snippet"/>
        </xpath>
    </template>


</odoo>