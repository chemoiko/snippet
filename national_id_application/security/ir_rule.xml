<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Record rules for stage-based access control -->
        
        <!-- Verification users can only see applications in draft or verified state -->
        <record id="rule_verification_user" model="ir.rule">
            <field name="name">Verification User: Can only see draft and verified applications</field>
            <field name="model_id" ref="model_national_id_application"/>
            <field name="domain_force">[('state', 'in', ['draft', 'verified'])]</field>
            <field name="groups" eval="[(4, ref('group_verification_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Senior users can see applications up to senior_approved state -->
        <record id="rule_senior_user" model="ir.rule">
            <field name="name">Senior User: Can see applications up to senior approved</field>
            <field name="model_id" ref="model_national_id_application"/>
            <field name="domain_force">[('state', 'in', ['draft', 'verified', 'senior_approved'])]</field>
            <field name="groups" eval="[(4, ref('group_senior_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Final users can see all applications -->
        <record id="rule_final_user" model="ir.rule">
            <field name="name">Final User: Can see all applications</field>
            <field name="model_id" ref="model_national_id_application"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_final_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Public users can only see their own applications -->
        <record id="rule_public_user" model="ir.rule">
            <field name="name">Public User: Can only see own applications</field>
            <field name="model_id" ref="model_national_id_application"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_public'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>

