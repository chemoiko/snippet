<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- list View -->
        <record id="view_purchase_rfq_request_list" model="ir.ui.view">
            <field name="name">purchase.rfq.request.list</field>
            <field name="model">purchase.rfq.request</field>
            <field name="arch" type="xml">
                <list string="RFQ Requests">
                    <field name="rfq_index"/>
                    <field name="name"/>
                    <field name="requester_id"/>
                    <field name="company_id"/>
                    <field name="bid_deadline"/>
                    <field name="state"/>
                    <field name="bid_count" widget="statinfo"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_purchase_rfq_request_form" model="ir.ui.view">
            <field name="name">purchase.rfq.request.form</field>
            <field name="model">purchase.rfq.request</field>
            <field name="arch" type="xml">
                <form string="RFQ Request">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,review,awarded,po_created"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="rfq_index" readonly="1" nolabel="1"/>
                            </h1>
                        </div>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="action_view_bids" string="Bids">
                                <field name="bid_count" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="object" name="action_open_related_po" invisible="not purchase_order_id">
                                <field name="purchase_order_id" string="Purchase Order"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="bid_deadline"/>
                            </group>
                            <group>
                                <field name="company_id"/>

                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_purchase_rfq_request" model="ir.actions.act_window">
            <field name="name">RFQ Requests</field>
            <field name="res_model">purchase.rfq.request</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_purchase_rfq_request_list"/>
        </record>

        <!-- Menu -->
        <menuitem id="menu_purchase_rfq_request_root" name="RFQ Requests" parent="purchase.menu_purchase_root" action="action_purchase_rfq_request" groups="purchase.group_purchase_user"/>
    </data>
</odoo>

