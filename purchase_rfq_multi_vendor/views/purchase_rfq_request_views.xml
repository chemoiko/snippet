<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- list View -->
        <record id="view_purchase_rfq_request_list" model="ir.ui.view">
            <field name="name">purchase.rfq.request.list</field>
            <field name="model">purchase.rfq.request</field>
            <field name="arch" type="xml">
                <list string="RFQ Requests">
                    <field name="rfq_index"/>
                    <field name="requester_id"/>
                    <field name="company_id"/>
                    <field name="bid_deadline"/>
                    <field name="state"/>
                    <field name="bid_count" widget="statinfo"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_purchase_rfq_request_form" model="ir.ui.view">
            <field name="name">purchase.rfq.request.form</field>
            <field name="model">purchase.rfq.request</field>
            <field name="arch" type="xml">
                <form string="RFQ Request">
                    <header>
                        <button name="action_generate_purchase_order" type="object" string="Create Purchase Order" class="btn-primary" invisible="purchase_order_id or not winning_bid_id"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,review,awarded,po_created"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="rfq_index" readonly="1" nolabel="1"/>
                            </h1>
                        </div>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="action_view_bids" string="Bids">
                                <field name="bid_count" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button text-dark" type="object" name="action_open_winning_bid" icon="fa-trophy" invisible="not winning_bid_id" style="background-color:#f9c74f;">
                                <span class="o_stat_value">
                                    <field name="winning_bid_id" readonly="1" nolabel="1"/>
                                </span>
                                <span class="o_stat_text">Winner</span>
                            </button>
                            <button class="oe_stat_button" type="object" name="action_open_related_po" icon="fa-shopping-cart" invisible="not purchase_order_id">
                                <span class="o_stat_value">
                                    <field name="purchase_order_id" readonly="1" nolabel="1"/>
                                </span>
                                <span class="o_stat_text">Purchase Order</span>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="rfq_index" readonly="1"/>
                                <field name="bid_deadline"/>
                            </group>
                            <group>
                                <field name="primary_vendor_id"/>
                                <field name="winning_bid_id" readonly="1"/>
                                <field name="purchase_order_id" readonly="1"/>
                                <field name="purchase_order_state" readonly="1"/>
                                <field name="company_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Suppliers">
                                <field name="rfq_vendor_ids" widget="many2many_tags"/>
                            </page>

                            <page string="Products">
                                <field name="line_ids">
                                    <list editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="product_id"/>
                                        <field name="name"/>
                                        <field name="product_qty"/>
                                        <field name="product_uom_id"/>
                                        <field name="expected_date"/>
                                    </list>
                                    <form string="Requested Product">
                                        <group>
                                            <field name="product_id"/>
                                            <field name="name"/>
                                            <field name="product_qty"/>
                                            <field name="product_uom_id"/>
                                            <field name="expected_date"/>
                                            <field name="notes"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_purchase_rfq_request" model="ir.actions.act_window">
            <field name="name">RFQ Requests</field>
            <field name="res_model">purchase.rfq.request</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_purchase_rfq_request_list"/>
        </record>

        <!-- Menu -->
        <menuitem id="menu_purchase_rfq_request_root" name="RFQ Requests" parent="purchase.menu_purchase_root" action="action_purchase_rfq_request" groups="purchase.group_purchase_user"/>
    </data>
</odoo>

